{
  "name": "@ovotech/laminar-oapi-cli",
  "version": "0.5.3",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "CLI generating typescript types for @ovotech/laminar-oapi",
  "author": "Ivan Kerin <ikerin@gmail.com>",
  "repository": "git@github.com:ovotech/laminar.git",
  "license": "Apache-2.0",
  "devDependencies": {
    "@ovotech/laminar": "^0.5.1",
    "@ovotech/laminar-oapi": "^0.4.1",
    "@types/jest": "^25.1.3",
    "@types/js-yaml": "^3.12.2",
    "@types/node": "^13.7.6",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "axios": "^0.19.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "jest": "^25.1.0",
    "pg": "^7.18.2",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.2"
  },
  "bin": {
    "laminar-oapi": "./scripts/laminar-oapi"
  },
  "scripts": {
    "test:build:integration": "laminar-oapi test/integration.yaml test/__generated__/integration.ts",
    "test:build:statements": "laminar-oapi test/statements.yaml test/__generated__/statements.ts",
    "build:examples": "laminar-oapi examples/oapi.yaml examples/oapi.yaml.ts",
    "pretest": "yarn test:build:integration && yarn test:build:statements",
    "build": "tsc --declaration",
    "build:docs": "yarn build:examples && build-docs README.md",
    "test": "jest test --runInBand",
    "lint:prettier": "prettier --list-different {src,test}/**/*.ts",
    "lint:eslint": "eslint '{src,test}/**/*.ts'",
    "lint": "yarn lint:prettier && yarn lint:eslint"
  },
  "jest": {
    "preset": "../../jest.json"
  },
  "peerDependencies": {
    "@ovotech/laminar": "*"
  },
  "dependencies": {
    "@ovotech/ts-compose": "^0.11.0",
    "commander": "^4.1.1",
    "openapi-schemas": "^1.0.3",
    "openapi3-ts": "^1.3.0"
  }
}
