{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": false,
    "lib": [
      "es2018"
    ],
    "outDir": "dist"
  },
  "include": [
    "packages/laminar/src",
    "packages/laminar-jwt/src",
    "packages/laminar-pgboss/src",
    "packages/laminar-pg/src",
    "packages/laminar-kafkajs/src",
    "packages/laminar-winston/src",
    "packages/laminar-handlebars/src",
    "packages/laminar-cli/src",
    "packages/json-schema/src",
  ]
}
