{
  "name": "laminar",
  "version": "0.11.0",
  "main": "index.js",
  "license": "Apache-2.0",
  "author": "Ivan Kerin <ikerin@gmail.com>",
  "repository": "git@github.com:ovotech/laminar.git",
  "private": true,
  "scripts": {
    "test": "lerna run test --stream",
    "lint": "lerna run lint --stream",
    "build": "lerna run build --stream",
    "publish": "lerna run publish",
    "build:readme": "build-readme README.md 'https://github.com/ovotech/laminar/tree/main' && bash -c 'for f in docs/*.md; do yarn build-readme $f https://github.com/ovotech/laminar/tree/main; done' && typedoc"
  },
  "workspaces": [
    "packages/*",
    "examples/*",
    "performance"
  ],
  "jest": {
    "preset": "./jest.json"
  },
  "devDependencies": {
    "@ikerin/build-readme": "^1.0.4",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1",
    "typedoc": "^0.20.33",
    "typescript": "^4.2.3"
  }
}
